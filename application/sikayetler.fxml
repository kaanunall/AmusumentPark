<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #d1c4e9, #f8bbd0);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SikayetlerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Yorum / Şikayet" />

    <ComboBox fx:id="turComboBox" prefWidth="200.0" promptText="Tür Seçin" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px;" />

    <TextArea fx:id="mesajTextArea" prefHeight="150.0" promptText="Mesajınızı buraya yazın..." style="-fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px; -fx-background-color: transparent;" wrapText="true" VBox.vgrow="ALWAYS" />

    <Button fx:id="gonderButton" onAction="#gonderButton_click" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Gönder" />

</VBox>
