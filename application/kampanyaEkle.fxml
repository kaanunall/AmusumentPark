<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #d1c4e9, #f8bbd0);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.KampanyaEkleController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Yeni Kampanya Ekle" />
        
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="100" text="Kampanya ID:" />
                <TextField fx:id="kampanyaIdField" prefWidth="200" promptText="ID" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: #0598ff;" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="100" text="Açıklama:" />
                <TextArea fx:id="aciklamaField" prefHeight="100" prefWidth="200" promptText="Kampanya açıklaması" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: #0598ff;" />
            </HBox>
        </VBox>
        
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="kaydetButton" onAction="#kaydetButton_click" style="-fx-background-color: #0598ff; -fx-text-fill: white;" text="Kaydet" />
            <Button fx:id="iptalButton" onAction="#iptalButton_click" style="-fx-background-color: #ff4444; -fx-text-fill: white;" text="İptal" />
        </HBox>
    </VBox>
</AnchorPane>
