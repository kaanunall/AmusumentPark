<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #d1c4e9, #f8bbd0);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="application.DogrulamaController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Doğrulama Kodu" />
    
    <TextField fx:id="kodField" promptText="Doğrulama kodunu girin" style="-fx-pref-width: 200px; -fx-background-color: transparent; -fx-border-color: gray;" />
    
    <Button fx:id="dogrulaButton" onAction="#dogrulaButton_click" style="-fx-pref-width: 200px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Doğrula" />
    
    <Button fx:id="geriDonButton" onAction="#geriDonButton_click" style="-fx-pref-width: 200px; -fx-background-color: #f44336; -fx-text-fill: white;" text="Geri Dön" />
    
    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
</VBox>
